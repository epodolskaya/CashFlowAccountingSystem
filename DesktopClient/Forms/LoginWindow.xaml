<Window x:Class="DesktopClient.Forms.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Войти" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Width="124"/>
        <TextBox x:Name="UserName" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,148,0,0" VerticalAlignment="Top" Width="168" Height="28"/>
        <PasswordBox x:Name="Password" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Width="168" Height="28" Margin="0,217,0,0"/>
        <Label Content="Имя пользователя" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="116,122,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="116,186,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Войти" HorizontalAlignment="Center" Margin="0,275,0,0" VerticalAlignment="Top" Height="28" Width="82" Click="LoginButton_Click"/>
    </Grid>
</Window>