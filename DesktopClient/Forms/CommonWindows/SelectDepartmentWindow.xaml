<Window x:Class="DesktopClient.Forms.CommonWindows.SelectDepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Выбор отдела" Height="315" Width="450" ResizeMode="NoResize">
    <Grid Background="LightGray" Loaded="FrameworkElement_OnLoaded">
        <ComboBox x:Name="DepartmentsBox" DisplayMemberPath="Name" HorizontalAlignment="Center" Margin="0,93,0,0"
                  VerticalAlignment="Top"
                  Width="198" />
        <Button x:Name="Apply" Content="Применить" HorizontalAlignment="Center" Margin="0,232,0,0"
                VerticalAlignment="Top" Width="110" Height="43" Click="Apply_Click" />
        <Label Content="Выберите отдел" FontSize="15" HorizontalContentAlignment="Center" HorizontalAlignment="Center"
               Margin="0,46,0,0" VerticalAlignment="Top" Width="140" Height="29" />
    </Grid>
</Window>