<Window x:Class="DesktopClient.Forms.CommonWindows.ChooseDateRange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Выбор диапазона дат" Height="350" Width="450" ResizeMode="NoResize">
    <Grid Background="LightGray">
        <DatePicker x:Name="From" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Width="199" />
        <DatePicker x:Name="To" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top" Width="198" />
        <Button x:Name="Apply" FontSize="15" Content="Применить" HorizontalAlignment="Center" Margin="0,240,0,0"
                VerticalAlignment="Top" Width="108" Height="43" Click="Apply_Click" />
        <Label Content="Выберите дату" FontSize="15" HorizontalContentAlignment="Center" HorizontalAlignment="Center"
               Margin="0,46,0,0" VerticalAlignment="Top" Width="140" Height="29" />
        <Label Content="Начальная дата" FontSize="15" HorizontalAlignment="Left" Margin="126,86,0,0"
               VerticalAlignment="Top" />
        <Label Content="Конечная дата" FontSize="15" HorizontalAlignment="Left" Margin="126,152,0,0"
               VerticalAlignment="Top" />

    </Grid>
</Window>