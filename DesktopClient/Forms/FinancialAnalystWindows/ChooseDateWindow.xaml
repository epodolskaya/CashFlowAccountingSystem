<Window x:Class="DesktopClient.Forms.FinancialAnalystWindows.ChooseDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ChooseDateWindow" Height="550" Width="450" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/Resoures/background.jpg" Stretch="Fill" />
    </Window.Background>
    <Grid>
        <DatePicker x:Name="DatePicker" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top"
                    Width="198" />
        <Button x:Name="Apply" Content="Применить" HorizontalAlignment="Center" Margin="0,150,0,0"
                VerticalAlignment="Top" Width="109" Height="43" Click="Apply_Click" />
        <Label Content="Выберите дату" Foreground="WhiteSmoke" HorizontalContentAlignment="Center" HorizontalAlignment="Center"
               Margin="0,46,0,0" VerticalAlignment="Top" Width="140" Height="29" />
    </Grid>
</Window>