<Window x:Class="DesktopClient.Forms.FinancialAnalystWindows.ProfitabilityChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient.Forms.FinancialAnalystWindows"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="ProfitabilityChartWindow" Height="600" Width="700">
    <Grid>
        <lvc:PieChart LegendLocation="Bottom"  Series="{Binding Collection}">
            <lvc:PieChart.ChartLegend>
                <lvc:DefaultLegend BulletSize="15"></lvc:DefaultLegend>
            </lvc:PieChart.ChartLegend>
            <lvc:PieChart.DataTooltip>
                <lvc:DefaultTooltip BulletSize="20"></lvc:DefaultTooltip>
            </lvc:PieChart.DataTooltip>
        </lvc:PieChart>
    </Grid>
</Window>
